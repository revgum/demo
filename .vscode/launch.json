{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Docker: Node",
      "port": "${input:debuggerPort}",
      "request": "attach",
      "address": "localhost",
      "localRoot": "${workspaceFolder}/app/${input:appName}",
      "remoteRoot": "/",
      "type": "node"
    },
    {
      "name": "Local: Node",
      "port": "${input:debuggerPort}",
      "request": "attach",
      "address": "localhost",
      "localRoot": "${workspaceFolder}/app/${input:appName}",
      "type": "node"
    },
    {
      "name": "Docker: Python",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": "${input:debuggerPort}"
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/app/${input:appName}",
          "remoteRoot": "/app"
        }
      ],
      "type": "debugpy",
      "justMyCode": false
    },
    {
      "name": "Local: Python",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": "${input:debuggerPort}"
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/app/${input:appName}",
          "remoteRoot": "${workspaceFolder}/app/${input:appName}"
        }
      ],
      "type": "debugpy",
      "justMyCode": false
    }
  ],
  "inputs": [
    {
      "type": "pickString",
      "id": "appName",
      "description": "Which app do you want to debug?",
      "options": ["backend-ts", "backend-flask", "web-nuxt"]
    },
    {
      "type": "pickString",
      "id": "debuggerPort",
      "description": "What is the debugger port?",
      "options": ["9229", "10001"],
      "default": "9229"
    }
  ]
}
