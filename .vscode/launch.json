  "version": "0.2.0",
  "configurations": [
    {
      "name": "Docker: Attach",
      "port": 9229,
      "request": "attach",
      "address": "localhost",
      "localRoot": "${workspaceFolder}/app/${input:appName}",
      "remoteRoot": "/",
      "type": "node"
    },
    {
      "name": "Local: Attach",
      "port": 9229,
      "request": "attach",
      "address": "localhost",
      "localRoot": "${workspaceFolder}/app/${input:appName}",
      "type": "node"
    }
  ],
  "inputs": [
    {
      "type": "pickString",
      "id": "appName",
      "description": "Which app do you want to debug?",
      "options": ["backend-ts", "web-nuxt"]
    }
  ]
}
